{
	"name": "LinkCheckMD",
	"displayName": "HTTP/s and relative link checker",
	"version": "0.0.1",
	"private": false,
	"description": "Checks Markdown links for the presence of a country-code as you type and flags as a warning. Checks whether HTTP/s links or relative links are reachable when you press Alt+L.",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"main": "./out/extension",
	"scripts": {
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"vscode:prepublish": "tsc -p ./"
	},
	"contributes": {
		"commands": [
			{
				"command": "extension.generateLinkReport",
				"title": "Generate a link report"
			}
		],
		"configuration": {
			"properties": {
				"linkcheckmd.enableCountryCodeCheck": {
					"default": true,
					"description": "Enable checking links for hard-coded language identifiers (LNK0001).",
					"type": "boolean"
				}
			},
			"title": "LinkCheckMD"
		},
		"keybindings": [
			{
				"command": "extension.generateLinkReport",
				"key": "Alt+L"
			}
		]
	},
	"activationEvents": [
		"onLanguage:markdown"
	],
	"dependencies": {
		"broken-link": "1.0.1",
		"validator": "13.11.0"
	},
	"devDependencies": {
		"@types/mocha": "10.0.6",
		"@types/node": "20.11.30",
		"mocha": "10.3.0",
		"typescript": "5.4.2",
		"typescript-esbuild": "0.4.5",
		"vscode": "1.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"icon": "images/linkcheckermdicon.png",
	"galleryBanner": {
		"color": "#0000FF",
		"theme": "dark"
	}
}
